<p>Enter your SAML AuthRequest XML:</p>
<form method="post" action="crypt">
    IdP Host: <input type="text" name="provider_url" value="<%= @provider_url %>" size="100"/><br/>
    Additional params: <input type="text" name="add_params" value="<%= @add_params %>" size="100"/><br/>
    <textarea name="xml" cols="100" rows="30"><%= @xml %></textarea><br/>
    <input type="submit" value="Crypt">
</form>

<% if @result %>
    <textarea cols="100" rows="15"><%= @result %></textarea>
<% end %>

<% if @link %>
    <p>
        <a href="<%= @link %>" target="_blank"><%= @link %></a>
    </p>
<% end %>
